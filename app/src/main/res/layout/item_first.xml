<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="26px"
    android:background="@color/white"
    android:layout_marginTop="30px">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/headImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"/>

    <TextView
        android:text="昵称"
        android:id="@+id/nickTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/headImageView"
        android:singleLine="true"
        android:textColor="#5C6C88"
        android:textSize="14sp"/>

    <TextView
        android:text="1分钟前"
        android:id="@+id/timeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nickTextView"
        android:layout_below="@id/nickTextView"
        android:layout_marginBottom="4dp"
        android:textColor="#404040"
        android:textSize="14sp"/>

    <TextView
        android:text="今天天气不错！"
        android:id="@+id/contentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/timeTextView"
        android:layout_below="@id/timeTextView"
        android:layout_marginBottom="4dp"
        android:textColor="#404040"
        android:textSize="14sp"/>

    <com.cnjy99.cyq.view.NestedScrollGridView
        android:id="@+id/gridViewFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/contentTextView"
        android:layout_below="@id/contentTextView"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="12dp"
        android:horizontalSpacing="4dp"
        android:stretchMode="none"
        android:verticalSpacing="4dp"/>

</com.zhy.autolayout.AutoRelativeLayout>