<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cnjy99.cyq.fragment.SecondFragment">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
       <cn.bingoogolapple.bgabanner.BGABanner
           android:id="@+id/banner_main_zoomStack"
           style="@style/BannerDefaultStyle"
           app:banner_indicatorGravity="bottom|center_horizontal"
           app:banner_transitionEffect="zoomStack"
           android:layout_below="@+id/linearLayout"
           android:layout_alignParentStart="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include android:id="@+id/center"
            layout="@layout/item_second_sel"/>
    </com.zhy.autolayout.AutoRelativeLayout>

   <com.zhy.autolayout.AutoRelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/design_listView_background"
       android:layout_weight="1">
      <!-- <include android:id="@+id/listViewOfCenter"
           layout="@layout/item_second"/>-->
       <android.support.v4.widget.SwipeRefreshLayout
           android:id="@+id/designSwipeRefreshLayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ListView
               android:id="@+id/designListView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>
       </android.support.v4.widget.SwipeRefreshLayout>
   </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
